

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model WeightLog {
  id     Int      @id @default(autoincrement())
  date   DateTime @default(now())
  weight Float
}

model MacroLog {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now())
  calories Int
  protein  Int
  carbs    Int
  fats     Int
}

model ActivityLog {
  id       String   @id @default(uuid())
  name     String
  duration Int      // minutes
  date     DateTime @default(now())
}
